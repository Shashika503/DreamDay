@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">Create Your Account</h2>
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Input.FullName" class="form-label">Full Name</label>
                            <input asp-for="Input.FullName" class="form-control rounded-pill" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control rounded-pill" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label"></label>
                            <input asp-for="Input.Password" class="form-control rounded-pill" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control rounded-pill" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
    <label asp-for="Input.Role" class="form-label">Register As</label>
    <select asp-for="Input.Role" class="form-select rounded-pill">
        <option value="">-- Select Role --</option>
        <option value="Couple">Couple</option>
        <option value="Planner">Planner</option>
    </select>
    <span asp-validation-for="Input.Role" class="text-danger"></span>
</div>



                        <button type="submit" class="btn btn-success w-100 rounded-pill">Register</button>

                        <div class="mt-3 text-center">
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already have an account? Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
