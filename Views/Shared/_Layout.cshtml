<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - DreamDay</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.5.0/css/all.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DreamDay.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Fixed Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">DreamDay</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                 <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Show 'Weddings' link if the user is a couple -->
                        @if (User.IsInRole("Couple"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Couple" asp-action="Dashboard">Weddings</a>
                            </li>
                        }

                        <!-- Show 'Planners' link if the user is a planner -->
                        @if (User.IsInRole("Planner"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Planner" asp-action="Dashboard">Weddings</a>
                            </li>
                        }

                        <!-- Common Links -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Planner" asp-action="Index">Planners</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Vendors" asp-action="Index">Vendors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="About" asp-action="Index">About Us</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="flex-shrink-4" style="margin-top: 80px;"> <!-- Adjusted margin for the fixed navbar -->
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer bg-dark text-white">
        <div class="container">
            <div class="mb-3">
                <a href="https://www.facebook.com" class="text-white me-2" target="_blank"><i class="fab fa-facebook-f"></i></a>
                <a href="https://www.instagram.com" class="text-white me-2" target="_blank"><i class="fab fa-instagram"></i></a>
                <a href="https://www.twitter.com" class="text-white" target="_blank"><i class="fab fa-twitter"></i></a>
            </div>
            <p class="mb-1">Follow us on social media for the latest updates!</p>
            <p class="mb-0">&copy; 2025 DreamDay. All rights reserved.</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
