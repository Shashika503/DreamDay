@model List<DreamDay.Models.Guest>

@{
    ViewData["Title"] = "Guest List";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <!-- Page Title -->
        <h3 class="text-center mb-4">Guest List</h3>

        <!-- Add New Guest Button -->
        <a href="@Url.Action("Create", "Guest", new { weddingId = ViewBag.WeddingId })" class="btn btn-primary btn-lg mb-4">
            <i class="fas fa-user-plus me-2"></i> Add New Guest
        </a>

        <!-- Guest List Table -->
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>RSVP Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var guest in Model)
                    {
                        <tr>
                            <td>@guest.Name</td>
                            <td>@guest.Email</td>
                            <td>@guest.RSVPStatus</td>
                            <td>
                                <a href="@Url.Action("Edit", "Guest", new { id = guest.Id, weddingId = ViewBag.WeddingId })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="@Url.Action("Delete", "Guest", new { id = guest.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this guest?');">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 12px;
        }

        .btn {
            font-size: 1rem;
            padding: 8px 20px;
            border-radius: 30px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .btn-sm {
            padding: 5px 15px;
            font-size: 0.875rem;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

        .table {
            border-radius: 12px;
        }

        .table-dark {
            background-color: #343a40;
            color: white;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f9f9f9;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f1f1;
        }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

        .container {
            max-width: 900px;
        }

        /* FontAwesome Icon Size */
        .btn i {
            font-size: 1.2rem;
        }

        .table-responsive {
            margin-top: 20px;
        }

        /* Responsive adjustments */
        @@media (max-width: 576px) {
            .container {
                padding-left: 15px;
                padding-right: 15px;
            }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
