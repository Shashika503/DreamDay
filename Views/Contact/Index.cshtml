@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <!-- Contact Title -->
        <h3 class="text-center mb-4">Contact Us</h3>
        
        <p class="text-center mb-4">If you have any questions or need assistance, feel free to contact us!</p>

        <!-- Contact Form -->
        <form>
            <div class="mb-4">
                <label for="Name" class="form-label fw-bold">Your Name</label>
                <input type="text" class="form-control form-control-lg" id="Name" placeholder="Enter your name" required>
            </div>
            <div class="mb-4">
                <label for="Email" class="form-label fw-bold">Email address</label>
                <input type="email" class="form-control form-control-lg" id="Email" placeholder="Enter your email" required>
            </div>
            <div class="mb-4">
                <label for="Message" class="form-label fw-bold">Your Message</label>
                <textarea class="form-control form-control-lg" id="Message" rows="4" placeholder="Write your message here" required></textarea>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
            </div>
        </form>

        <!-- Contact Info Section -->
        <div class="mt-5">
            <p class="fw-bold">You can also reach us via:</p>
            <ul class="list-unstyled">
                <li><i class="fas fa-envelope me-2"></i>Email: <a href="mailto:contact@dreamday.com">contact@dreamday.com</a></li>
                <li><i class="fas fa-phone-alt me-2"></i>Phone: (123) 456-7890</li>
                <li><i class="fas fa-map-marker-alt me-2"></i>Address: 123 DreamDay Street, City, Country</li>
            </ul>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 12px;
        }

        .form-control-lg {
            font-size: 1.1rem;
            padding: 12px;
            border-radius: 25px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: 12px 30px;
            border-radius: 30px;
            font-size: 1.2rem;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .container {
            max-width: 800px;
        }

        .list-unstyled {
            font-size: 1.1rem;
        }

        .list-unstyled li {
            margin-bottom: 15px;
        }

        .list-unstyled li i {
            font-size: 1.3rem;
            color: #007bff;
        }

        .fw-bold {
            font-weight: 600;
        }

        /* Responsive adjustments */
        @@media (max-width: 576px) {
            .container {
                padding-left: 15px;
                padding-right: 15px;
            }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
