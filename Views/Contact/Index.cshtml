@{
    ViewData["Title"] = "Contact Us";
}

<h3>Contact Us</h3>

<p>If you have any questions or need assistance, feel free to contact us!</p>

<!-- Contact form (optional, you can expand this if you want a form) -->
<form>
    <div class="mb-3">
        <label for="Name" class="form-label">Your Name</label>
        <input type="text" class="form-control" id="Name" placeholder="Enter your name" required>
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="Email" placeholder="Enter your email" required>
    </div>
    <div class="mb-3">
        <label for="Message" class="form-label">Your Message</label>
        <textarea class="form-control" id="Message" rows="4" placeholder="Write your message here" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send Message</button>
</form>

<p class="mt-3">You can also reach us via:</p>
<ul>
    <li>Email: <a href="mailto:contact@dreamday.com">contact@dreamday.com</a></li>
    <li>Phone: (123) 456-7890</li>
    <li>Address: 123 DreamDay Street, City, Country</li>
</ul>
