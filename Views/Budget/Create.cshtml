@model DreamDay.Models.BudgetItem

@{
    ViewData["Title"] = "Create Budget Item";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h3 class="text-center mb-4">Create New Budget Item</h3>

        <form asp-action="Create" method="post">
            <!-- Category Selection -->
            <div class="mb-4">
                <label asp-for="Category" class="form-label fw-bold">Category</label>
                <select asp-for="Category" class="form-select form-select-lg" aria-label="Select Category">
                    <option value="">Select Category</option>
                    @foreach (var category in ViewBag.Categories as SelectList)
                    {
                        <option value="@category.Text">@category.Text</option>
                    }
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <!-- Estimated Cost -->
            <div class="mb-4">
                <label asp-for="EstimatedCost" class="form-label fw-bold">Estimated Cost</label>
                <input asp-for="EstimatedCost" class="form-control form-control-lg" type="number" step="0.01" placeholder="Enter Estimated Cost" />
                <span asp-validation-for="EstimatedCost" class="text-danger"></span>
            </div>

            <!-- Actual Cost -->
            <div class="mb-4">
                <label asp-for="ActualCost" class="form-label fw-bold">Actual Cost</label>
                <input asp-for="ActualCost" class="form-control form-control-lg" type="number" step="0.01" placeholder="Enter Actual Cost" />
                <span asp-validation-for="ActualCost" class="text-danger"></span>
            </div>

            <!-- Hidden WeddingId -->
            <input type="hidden" asp-for="WeddingId" value="@ViewBag.WeddingId" />

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg w-100">Create Budget Item</button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 12px;
        }

        .form-label {
            font-weight: 600;
        }

        .form-control, .form-select {
            border-radius: 25px;
            font-size: 1rem;
        }

        .form-control-lg, .form-select-lg {
            font-size: 1.1rem;
            padding: 15px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: 12px 30px;
            border-radius: 30px;
            font-size: 1.2rem;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .container {
            max-width: 800px;
        }

        .w-100 {
            width: 100%;
        }

        .mb-4 {
            margin-bottom: 1.5rem;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
