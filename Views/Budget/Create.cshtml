@model DreamDay.Models.BudgetItem

@{
    ViewData["Title"] = "Create Budget Item";
}

<h3>Create New Budget Item</h3>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Category" class="form-label"></label>
        <select asp-for="Category" class="form-control">
            <option value="">Select Category</option>
            @foreach (var category in ViewBag.Categories as SelectList)
            {
                <option value="@category.Text">@category.Text</option>
            }
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EstimatedCost" class="form-label"></label>
        <input asp-for="EstimatedCost" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="EstimatedCost" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ActualCost" class="form-label"></label>
        <input asp-for="ActualCost" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="ActualCost" class="text-danger"></span>
    </div>

    <!-- Hidden WeddingId -->
    <input type="hidden" asp-for="WeddingId" value="@ViewBag.WeddingId" />

    <button type="submit" class="btn btn-primary">Create Budget Item</button>
</form>
