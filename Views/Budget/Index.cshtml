@model List<DreamDay.Models.BudgetItem>

@{
    ViewData["Title"] = "Budget Items";
}

<h3 class="mb-4">Budget Items</h3>
<a href="@Url.Action("Create", "Budget", new { weddingId = ViewBag.WeddingId })" class="btn btn-primary mb-4"><i class="fas fa-plus-circle"></i> Add New Budget Item</a>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Category</th>
                <th class="text-end">Estimated Cost</th>
                <th class="text-end">Actual Cost</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Category</td>
                    <td class="text-end">@item.EstimatedCost.ToString("C")</td>
                    <td class="text-end">@item.ActualCost.ToString("C")</td>
                    <td>
                        <a href="@Url.Action("Edit", "Budget", new { id = item.Id, weddingId = ViewBag.WeddingId })" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="@Url.Action("Delete", "Budget", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?');">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
