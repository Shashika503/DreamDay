@model DreamDay.Models.BudgetItem

@{
    ViewData["Title"] = "Delete Budget Item";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h3 class="text-center mb-4">Are you sure you want to delete this budget item?</h3>

        <!-- Display Budget Item Details in a Card -->
        <div class="text-center mb-4">
            <h5 class="mb-2"><strong>Category:</strong> @Model.Category</h5>
            <p><strong>Estimated Cost:</strong> @Model.EstimatedCost.ToString("C")</p>
            <p><strong>Actual Cost:</strong> @Model.ActualCost.ToString("C")</p>
        </div>

        <!-- Confirmation Form -->
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            
            <div class="d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-danger btn-lg rounded-pill w-40">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a href="@Url.Action("Index", "Budget", new { weddingId = Model.WeddingId })" class="btn btn-secondary btn-lg rounded-pill w-40">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 12px;
        }

        .form-label {
            font-weight: 600;
        }

        .form-control {
            border-radius: 25px;
            font-size: 1rem;
        }

        .btn {
            font-size: 1.1rem;
            padding: 12px 30px;
            border-radius: 25px;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

        .container {
            max-width: 800px;
        }

        .w-40 {
            width: 45%;
        }
    </style>
}
