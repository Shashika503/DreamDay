@model DreamDay.Models.ChecklistItem

@{
    ViewData["Title"] = "Edit Checklist Item";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <!-- Form Title -->
        <h3 class="text-center mb-4">Edit Checklist Item</h3>

        <!-- Edit Form -->
        <form asp-action="Edit" method="post">
            <!-- Task Field -->
            <div class="mb-4">
                <label asp-for="Task" class="form-label fw-bold">Task</label>
                <input asp-for="Task" class="form-control form-control-lg" placeholder="Enter Task" />
                <span asp-validation-for="Task" class="text-danger"></span>
            </div>

            <!-- Due Date Field -->
            <div class="mb-4">
                <label asp-for="DueDate" class="form-label fw-bold">Due Date</label>
                <input asp-for="DueDate" class="form-control form-control-lg" type="date" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>

            <!-- Is Completed Checkbox -->
            <div class="mb-4">
                <label asp-for="IsCompleted" class="form-label fw-bold">Is Completed?</label>
                <input asp-for="IsCompleted" type="checkbox" class="form-check-input" />
                <span asp-validation-for="IsCompleted" class="text-danger"></span>
            </div>

            <!-- Hidden WeddingId -->
            <input type="hidden" asp-for="WeddingId" value="@ViewBag.WeddingId" />

            <!-- Submit Button -->
            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 12px;
        }

        .form-label {
            font-weight: 600;
        }

        .form-control-lg {
            border-radius: 25px;
            font-size: 1.1rem;
            padding: 12px;
        }

        .form-check-input {
            width: 20px;
            height: 20px;
            margin-top: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: 12px 30px;
            font-size: 1.2rem;
            border-radius: 30px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .container {
            max-width: 800px;
        }

        .d-grid {
            display: grid;
        }

        .gap-2 {
            gap: 1rem;
        }

        /* Small screen responsiveness */
        @@media (max-width: 576px) {
            .container {
                padding-left: 15px;
                padding-right: 15px;
            }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
