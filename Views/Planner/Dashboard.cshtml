@model List<DreamDay.Models.Wedding>

@{
    ViewData["Title"] = "Planner Dashboard";
}

<div class="container mt-5">
    <!-- Welcome Message -->
    <h3 class="text-center mb-4">Welcome, @User.Identity.Name!</h3>
    <h4 class="text-center mb-5">Your Weddings</h4>

    <!-- Wedding Cards -->
    <div class="row g-4">
        @foreach (var wedding in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-lg rounded-3 h-100">
                    <div class="card-body">
                        <h5 class="card-title text-center mb-3">@wedding.Title</h5>
                        <p class="card-text text-center mb-2"><strong>Date:</strong> @wedding.Date.ToString("MMMM dd, yyyy")</p>
                        <p class="card-text text-center mb-4"><strong>Planner:</strong> @wedding.Planner.FullName</p>

                        <div class="d-flex flex-column gap-3">
                            <a href="@Url.Action("Index", "Budget", new { weddingId = wedding.Id })" class="btn btn-primary btn-lg rounded-pill">
                                <i class="fas fa-dollar-sign me-2"></i> Manage Budget
                            </a>
                            <a href="@Url.Action("Index", "Timeline", new { weddingId = wedding.Id })" class="btn btn-info btn-lg rounded-pill">
                                <i class="fas fa-clock me-2"></i> Manage Timeline
                            </a>
                            <a href="@Url.Action("Index", "Checklist", new { weddingId = wedding.Id })" class="btn btn-secondary btn-lg rounded-pill">
                                <i class="fas fa-list-check me-2"></i> Manage Checklist
                            </a>
                            <a href="@Url.Action("Index", "Guest", new { weddingId = wedding.Id })" class="btn btn-success btn-lg rounded-pill">
                                <i class="fas fa-users me-2"></i> Manage Guest List
                            </a>
                           <a href="@Url.Action("EditWedding", "Couple", new { weddingId = wedding.Id })" class="btn btn-warning btn-lg rounded-pill">

                                <i class="fas fa-cogs me-2"></i> Manage Vendors
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 12px;
        }

        .card-body {
            padding: 1.5rem;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .card-text {
            font-size: 1rem;
            color: #6c757d;
        }

        .btn {
            font-size: 1rem;
            padding: 12px 20px;
            border-radius: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-lg {
            padding: 15px 30px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .btn:hover {
            filter: brightness(90%);
        }

        /* Hover effects for the cards */
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .container {
            max-width: 1200px;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .card {
                margin-top: 10px;
            }

            .btn {
                font-size: 0.875rem;
                padding: 10px 20px;
            }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
