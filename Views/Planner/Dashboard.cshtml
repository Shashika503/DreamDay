@model List<DreamDay.Models.Wedding>

@{
    ViewData["Title"] = "Planner Dashboard";
}

<h3>Welcome, @User.Identity.Name!</h3>
<h4>Your Weddings</h4>

<div class="row">
    @foreach (var wedding in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@wedding.Title</h5>
                    <p><strong>Date:</strong> @wedding.Date.ToString("MMMM dd, yyyy")</p>
                    <p><strong>Planner:</strong> @wedding.Planner.FullName</p>

                    <div class="mt-3">
                        <a href="@Url.Action("Index", "Budget", new { weddingId = wedding.Id })" class="btn btn-outline-primary">Manage Budget</a>
                        <a href="@Url.Action("Index", "Timeline", new { weddingId = wedding.Id })" class="btn btn-outline-info">Manage Timeline</a>
                        <a href="@Url.Action("Index", "Checklist", new { weddingId = wedding.Id })" class="btn btn-outline-secondary">Manage Checklist</a>
                        <a href="@Url.Action("Index", "Guest", new { weddingId = wedding.Id })" class="btn btn-outline-success">Manage Guest List</a>
                        <a href="@Url.Action("Index", "Vendors", new { weddingId = wedding.Id })" class="btn btn-outline-warning">Manage Vendors</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
