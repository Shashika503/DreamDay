@model DreamDay.Models.TimelineEvent

@{
    ViewData["Title"] = "Create Timeline Event";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <!-- Form Title -->
        <h3 class="text-center mb-4">Create New Timeline Event</h3>

        <!-- Create Event Form -->
        <form asp-action="Create" method="post">
            <!-- Title Field -->
            <div class="mb-4">
                <label asp-for="Title" class="form-label fw-bold">Title</label>
                <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter event title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Time Field -->
            <div class="mb-4">
                <label asp-for="Time" class="form-label fw-bold">Time</label>
                <input asp-for="Time" class="form-control form-control-lg" type="datetime-local" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>

            <!-- Location Field -->
            <div class="mb-4">
                <label asp-for="Location" class="form-label fw-bold">Location</label>
                <input asp-for="Location" class="form-control form-control-lg" placeholder="Enter event location" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <!-- Hidden WeddingId -->
            <input type="hidden" asp-for="WeddingId" value="@ViewBag.WeddingId" />

            <!-- Create Event Button -->
            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Create Event</button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 12px;
        }

        .form-label {
            font-weight: 600;
        }

        .form-control-lg {
            font-size: 1.1rem;
            padding: 12px;
            border-radius: 25px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: 12px 30px;
            font-size: 1.2rem;
            border-radius: 30px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .container {
            max-width: 800px;
        }

        .d-grid {
            display: grid;
        }

        .gap-2 {
            gap: 1rem;
        }

        /* Responsive adjustments */
        @@media (max-width: 576px) {
            .container {
                padding-left: 15px;
                padding-right: 15px;
            }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
