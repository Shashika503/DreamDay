@model DreamDay.Models.TimelineEvent

@{
    ViewData["Title"] = "Delete Timeline Event";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <!-- Delete Confirmation Title -->
        <h3 class="text-center mb-4">Are you sure you want to delete this timeline event?</h3>

        <!-- Event Details -->
        <div class="text-center mb-4">
            <h5 class="fw-bold">@Model.Title</h5>
            <p>
                @if (Model.Time.HasValue)
                {
                    @Model.Time.Value.ToString("MMMM dd, yyyy hh:mm tt")
                }
                else
                {
                    <span class="text-muted">No time set</span>
                }
            </p>
            <p>@Model.Location</p>
        </div>

        <!-- Delete Confirmation Form -->
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />

            <!-- Buttons Container -->
            <div class="d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-danger btn-lg rounded-pill w-40">
                    <i class="fas fa-trash-alt me-2"></i> Delete
                </button>
                <a href="@Url.Action("Index", "Timeline", new { weddingId = Model.WeddingId })" class="btn btn-secondary btn-lg rounded-pill w-40">
                    <i class="fas fa-times me-2"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 12px;
        }

        .form-label {
            font-weight: 600;
        }

        .btn {
            font-size: 1.2rem;
            padding: 12px 30px;
            border-radius: 30px;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

        .container {
            max-width: 800px;
        }

        .w-40 {
            width: 45%;
        }

        .fw-bold {
            font-weight: 600;
        }

        .d-flex {
            display: flex;
        }

        .gap-3 {
            gap: 1.5rem;
        }

        /* FontAwesome Icon Size */
        .btn i {
            font-size: 1.5rem;
        }

        /* Responsive adjustments */
        @@media (max-width: 576px) {
            .container {
                padding-left: 15px;
                padding-right: 15px;
            }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
