@model DreamDay.Models.Vendor

@{
    ViewData["Title"] = "Edit Vendor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg p-4 rounded-4">
                <h3 class="text-center text-primary fw-bold mb-4">
                    <i class="fas fa-edit me-2"></i>Edit Vendor
                </h3>

                <form asp-action="EditVendor" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Vendor Name</label>
                        <input asp-for="Name" class="form-control rounded-pill px-3 py-2" placeholder="e.g., Elegant Events" required />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category" class="form-label">Category</label>
                        <select asp-for="Category" class="form-select rounded-pill px-3 py-2" required>
                            <option value="">Select Category</option>
                            @foreach (var category in ViewBag.Categories as SelectList)
                            {
                                <option value="@category.Text" selected="@(category.Text == Model.Category)">
                                    @category.Text
                                </option>
                            }
                        </select>
                        <span asp-validation-for="Category" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control rounded-3 px-3 py-2" rows="3" placeholder="Brief about the vendor..." required></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PriceRange" class="form-label">Price Range</label>
                        <input asp-for="PriceRange" class="form-control rounded-pill px-3 py-2" type="number" step="0.01" placeholder="e.g., 1500.00" required />
                        <span asp-validation-for="PriceRange" class="text-danger small"></span>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .form-control:focus,
        .form-select:focus {
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

        .card {
            border: none;
        }

        @@media (max-width: 576px) {
            .card {
                padding: 2rem 1.2rem;
            }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
