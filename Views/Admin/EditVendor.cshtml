@model DreamDay.Models.Vendor

@{
    ViewData["Title"] = "Edit Vendor";
}

<h3>Edit Vendor</h3>

<form asp-action="EditVendor" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Vendor Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-4">
                <label asp-for="Category" class="form-label fw-bold">Category</label>
                <select asp-for="Category" class="form-control form-select-lg" aria-label="Select Budget Category">
                    <option value="">Select Category</option>
                    @foreach (var category in ViewBag.Categories as SelectList)
                    {
                        var isSelected = category.Text == Model.Category ? "selected" : "";
                        <option value="@category.Text" selected="@isSelected">@category.Text</option>
                    }
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PriceRange" class="form-label">Price Range</label>
        <input asp-for="PriceRange" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="PriceRange" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
