@model DreamDay.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete Planner";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4 p-4">
                <h3 class="text-center text-danger fw-bold mb-4">
                    <i class="fas fa-user-times me-2"></i>Confirm Deletion
                </h3>

                <div class="alert alert-warning text-center">
                    <p class="mb-1">Are you sure you want to delete this planner?</p>
                    <strong>@Model.FullName</strong><br />
                    <span class="text-muted small">@Model.Email</span>
                </div>

                <form asp-action="DeletePlannerConfirmed" method="post" class="text-center mt-4">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <button type="submit" class="btn btn-danger px-4 rounded-pill">
                            <i class="fas fa-trash me-1"></i>Delete
                        </button>
                        <a href="@Url.Action("IndexPlanners", "Admin")" class="btn btn-secondary px-4 rounded-pill">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            background-color: #fff;
        }

        .btn {
            font-size: 1rem;
        }

        .alert-warning {
            border-radius: 1rem;
            padding: 1.5rem;
        }

        @@media (max-width: 576px) {
            .card {
                padding: 1.5rem 1rem;
            }

            .btn {
                width: 100%;
                margin-bottom: 0.5rem;
            }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
