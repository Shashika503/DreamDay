@model List<DreamDay.Models.Vendor>

@{
    ViewData["Title"] = "Vendors";
}

<h3>Vendors</h3>

@if (User.IsInRole("Admin"))
{
    <a href="@Url.Action("CreateVendor", "Admin")" class="btn btn-primary mb-3">Add New Vendor</a>
}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price Range</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vendor in Model)
        {
            <tr>
                <td>@vendor.Name</td>
                <td>@vendor.Category</td>
                <td>@vendor.PriceRange</td>
                <td>@vendor.Description</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("EditVendor", "Admin", new { id = vendor.Id })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("DeleteVendor", "Admin", new { id = vendor.Id })" class="btn btn-danger">Delete</a>
                    }
                    else
                    {
                        <span class="text-muted">View Only</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
