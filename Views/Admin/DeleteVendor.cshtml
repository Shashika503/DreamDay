@model DreamDay.Models.Vendor

@{
    ViewData["Title"] = "Delete Vendor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4 p-4">
                <h3 class="text-center text-danger fw-bold mb-4">
                    <i class="fas fa-trash-alt me-2"></i>Confirm Vendor Deletion
                </h3>

                <div class="alert alert-warning text-center rounded-3">
                    <p class="mb-2">Are you sure you want to delete this vendor?</p>
                    <h5 class="fw-bold mb-1">@Model.Name</h5>
                    <p class="text-muted mb-1"><strong>Category:</strong> @Model.Category</p>
                    <p class="text-muted mb-1"><strong>Price Range:</strong> @Model.PriceRange.ToString("C")</p>
                    <p class="small text-muted"><strong>Description:</strong> @Model.Description</p>
                </div>

                <form asp-action="DeleteVendorConfirmed" method="post" class="text-center mt-4">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <button type="submit" class="btn btn-danger px-4 rounded-pill">
                            <i class="fas fa-trash me-1"></i>Delete
                        </button>
                        <a href="@Url.Action("IndexVendors", "Admin")" class="btn btn-secondary px-4 rounded-pill">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .btn {
            font-size: 1rem;
        }

        .alert-warning {
            background-color: #fff3cd;
            border-color: #ffeeba;
        }

        @@media (max-width: 576px) {
            .btn {
                width: 100%;
                margin-bottom: 0.5rem;
            }

            .card {
                padding: 1.5rem 1rem;
            }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
