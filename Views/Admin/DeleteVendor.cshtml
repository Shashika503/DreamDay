@model DreamDay.Models.Vendor

@{
    ViewData["Title"] = "Delete Vendor";
}

<h3>Are you sure you want to delete this vendor?</h3>

<div>
    <h5>@Model.Name</h5>
    <p><strong>Category:</strong> @Model.Category</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Price Range:</strong> @Model.PriceRange</p>
</div>

<form asp-action="DeleteVendorConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("IndexVendors", "Admin")" class="btn btn-secondary">Cancel</a>
</form>
